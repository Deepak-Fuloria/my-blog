<form action="/createPosts" method="POST" enctype="multipart/form-data">
    <% if(error.length>0) {%>
        <div class="errors">
          <%error.forEach(error=>{%>
              <span class="error"><%= error.msg%></span>
              <%})%>
        </div>
          <%}%>
    <div class="group">
        <h3 id="h3">Create New Post</h3>
    </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title"class="control" placeholder="Post Title" value="<%= postTitle %>">
    </div>
    <div class="group">
        <label for="body">Body</label>
        <textarea name="body" id="body" class="control" cols="30" rows="10"><%= body %></textarea>
        
    </div>
    <div class="group">
        <label for="imageLabel" class="fileLabel">Upload image</label>
        <input type="file" name="image" id="imageLabel" >
    </div>
    <div class="group">
        <input type="submit" value="Add Post" class="btn btn-sweet">
    </div>
</form>