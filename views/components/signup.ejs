<div class="form-container">
    
    <% if(error.length>0) {%>
  <div class="errors">
    <%error.forEach(error=>{%>
        <span class="error"><%= error.msg%></span>
        <%})%>
  </div>
    <%}%>

    <form action="/register" method="POST">
        <div class="group">
            <h3>Create New Account</h3>
        </div>
        <div class="group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="name" class="control" value="<%=input.name%>">
        </div>
        <div class="group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="email" class="control" value="<%=input.email%>">
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="password" class="control" value="<%=input.password%>">
        </div>
        <div class="group">
            <input type="submit" id="name" value="Register" class="btn btn-sweet">
        </div>
    </form>
</div>








