 <div class="form-container">
    <% if(locals.message.success) {%>
        <div class="alert-success"> <%= message.success%>  </div>
          <%}%>
          <% if(error.length>0) {%>
            <div class="errors">
              <%error.forEach(error=>{%>
                  <span class="error"><%= error.msg%></span>
                  <%})%>
            </div>
              <%}%>
    <form action="/login" method="POST">
        <div class="group">
            <h3>User Login</h3>
        </div>
        
        <div class="group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="email" class="control" value="<%=input.email%>">
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="password" class="control" value="<%=input.password%>">
        </div>
        <div class="group">
            <input type="submit" id="name" value="Login" class="btn btn-sweet">
        </div>
    </form>
</div>








